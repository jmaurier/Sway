h1
  color: green

#askQuestionButton 
  float: right

#logout_btn:hover
	cursor:pointer

.arrow-up {
	width: 0; 
	height: 0; 
	border-left: 20px solid transparent;
	border-right: 20px solid transparent;
	
	border-bottom: 20px solid #999999;
}

.arrow-up:hover{
	border-bottom: 20px solid #FF9933;
}


.arrow-down:hover{
	border-top: 20px solid #5C8AE6;
}

.arrow-down {
	width: 0; 
	height: 0; 
	border-left: 20px solid transparent;
	border-right: 20px solid transparent;
	
	border-top: 20px solid #999999;
}

.vote-text{
	position: relative;
	left: 40%;
}

.ng-invalid {
    border-color: red;
    outline-color: red;
}

.ng-valid {
    border-color: green;
    outline-color: green;
}

