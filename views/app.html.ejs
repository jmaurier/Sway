<!DOCTYPE html>
<html ng-app='app'>
  <head>
    <link rel='stylesheet' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="/angular-toastr.css" />
    <link rel='stylesheet' href='/app.css'>
  </head>
  <body ng-controller='ApplicationCtrl'>
    <nav class='navbar navbar-default'>
      <div class='container'>
        <ul class='nav navbar-nav'>
          <li><a href='/#/'>Home</a></li>
          <li ng-if='!currentUser'><a href='/#/register'>Register</a></li>
          <li ng-if='!currentUser' ><a href='/#/login'>Login</a></li>
        </ul>
        <ul>
          <p ng-if='currentUser' class='navbar-text navbar-right'>
            Signed in as {{currentUser.username}}
          </p>
          <p><a ng-if='currentUser' ng-click='logout()' class='navbar-text navbar-right'>Logout</a></p>  
        </ul>
      </div>
    </nav>
    <div class='container' ng-view></div>
    <script src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.js'></script>
    <script src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-route.js'></script>
    <script src="/angular-toastr.tpls.js"></script>
    <script src='/app.js'></script>
  </body>
</html>
